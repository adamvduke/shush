%form#input{ action: "/save", method: "POST" }
  #message.form-group
    %label{ for: "secret" } Message
    %textarea#note.form-control{ name: "secret", rows: "3" }
    %input#save.btn.btn-default{ type: :submit, value: "Save" }

  %label{ for: "options" } This message will self-destruct...
  #options.form-group
    .radio
      %label
        %input.radio#expire-read{ type: "radio", name: "expire", value: :read, checked: :checked }
        when it's first viewed
    .radio
      %label
        %input.radio#expire-time{ type: "radio", name: "expire", value: :time }
        at a specified time

    %select.form-control#expire-at{ name: "time" }
      = TIMES.each do |text, value|
        %option{ value: value }= text

- content_for :js do
  %script{ src: "/vendor/triplesec.min.js"}
  %script{ src: "/authoring.js" }
